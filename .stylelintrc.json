{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended-vue"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations",
      "rules"
    ],
    "order/properties-alphabetical-order": [
      true
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": [
          "appearance"
        ]
      }
    ],
    "selector-id-pattern": null,
    "selector-class-pattern": null,
    "unit-allowed-list": [
      "ch",
      "em",
      "rem",
      "vh",
      "vw",
      "vmin",
      "deg",
      "%",
      "s",
      "fr"
    ]
  }
}