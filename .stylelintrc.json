{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended-vue"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "unit-whitelist": [
      "em",
      "rem",
      "vh",
      "vw",
      "deg",
      "%",
      "s",
      "fr",
      "ch"
    ],
    "order/order": [
      "custom-properties",
      "declarations",
      "rules"
    ],
    "order/properties-alphabetical-order": [
      true
    ]
  }
}