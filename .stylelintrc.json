{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-scss", "stylelint-order"],
  "rules": {
    "unit-whitelist": ["em", "rem", "vh", "vw", "deg", "%", "s", "fr"],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "order/order": ["custom-properties", "declarations", "rules"],
    "order/properties-order": [
      [
        {
          "groupName": "position",
          "properties": [
            "display",
            "position",
            "overflow",
            "content",
            "box-sizing",
            "top",
            "right",
            "bottom",
            "left"
          ]
        },
        {
          "groupName": "dimensions",
          "properties": [
            "height",
            "min-height",
            "max-height",
            "width",
            "min-width",
            "max-width"
          ]
        },
        {
          "groupName": "margin",
          "properties": [
            "margin",
            "margin-top",
            "margin-right",
            "margin-bottom",
            "margin-left"
          ]
        },
        {
          "groupName": "padding",
          "properties": [
            "padding",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left"
          ]
        },
        {
          "groupName": "background",
          "emptyLineBefore": "always",
          "properties": [
            "background",
            "background-color",
            "background-image",
            "background-position",
            "background-size",
            "background-attachment",
            "background-repeat"
          ]
        },
        {
          "groupName": "font",
          "properties": [
            "color",
            "font-size",
            "font-weight",
            "font-style",
            "text-align",
            "text-transform",
            "font-variation-settings",
            "line-height",
            "vertical-align"
          ]
        },
        {
          "groupName": "border",
          "properties": [
            "border",
            "border-radius",
            "border-color",
            "border-top",
            "border-right",
            "border-bottom",
            "border-left"
          ]
        },
        {
          "groupName": "flex",
          "properties": [
            "flex",
            "flex-basis",
            "flex-grow",
            "flex-shrink",
            "justify-content",
            "align-items",
            "align-self"
          ]
        },
        {
          "groupName": "grid",
          "properties": [
            "grid",
            "grid-template",
            "grid-template-areas",
            "grid-template-columns",
            "grid-template-row",
            "grid-auto-columns",
            "grid-auto-rows",
            "grid-auto-flow",
            "grid-gap",
            "grid-column-gap",
            "grid-row-gap",
            "grid-column-gap",
            "grid-column",
            "grid-row",
            "grid-row-start",
            "grid-column-start",
            "grid-row-end",
            "grid-column-end"
          ]
        },
        {
          "groupName": "misc",
          "properties": [
            "transform",
            "transition",
            "animation",
            "filter",
            "opacity"
          ]
        }
      ],
      {
        "unspecified": "bottomAlphabetical"
      }
    ]
  }
}
